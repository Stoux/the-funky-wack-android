<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FF1A1A1A" />
        </shape>
    </item>
    <!-- App name text area with gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#FF2A2A2A"
                android:endColor="#FF0A0A0A" />
        </shape>
    </item>
</layer-list>
